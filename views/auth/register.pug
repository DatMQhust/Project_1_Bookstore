doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Đăng ký tài khoản
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css")
    style.
      body {
        margin: 0;
        padding: 0;
        font-family: 'Arial', sans-serif;
        background: linear-gradient(to bottom right, rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.9)),
                    url('https://source.unsplash.com/random/1920x1080') no-repeat center center fixed;
        background-size: cover;
        color: #fff;
      }
      .container {
        max-width: 400px;
        margin: 5% auto;
        background: rgba(255, 255, 255, 0.1);
        padding: 20px 30px;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
      }
      .container h1 {
        text-align: center;
        margin-bottom: 20px;
        font-size: 24px;
        color: #fff;
      }
      .form-group {
        margin-bottom: 15px;
      }
      .form-group label {
        display: block;
        margin-bottom: 5px;
        color: #ddd;
      }
      .form-group input {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 4px;
        background: rgba(255, 255, 255, 0.2);
        color: #fff;
        font-size: 14px;
      }
      .form-group input:focus {
        outline: none;
        background: rgba(255, 255, 255, 0.3);
      }
      .btn {
        width: 100%;
        padding: 10px;
        background: #6c5ce7;
        border: none;
        border-radius: 4px;
        color: #fff;
        font-size: 16px;
        cursor: pointer;
        transition: background 0.3s;
      }
      .btn:hover {
        background: #5a4cb0;
      }
      .footer {
        text-align: center;
        margin-top: 10px;
        font-size: 14px;
        color: #ccc;
      }
      .footer a {
        color: #6c5ce7;
        text-decoration: none;
      }
      .footer a:hover {
        text-decoration: underline;
      }
  body
    .container
      h1 Đăng ký tài khoản
      form(action="/register", method="POST")
        .form-group
          label(for="username") Tên đăng nhập
          input#username(type="text", name="username", placeholder="Nhập tên đăng nhập" required)
        .form-group
          label(for="password") Mật khẩu
          input#password(type="password", name="password", placeholder="Nhập mật khẩu" required)
        .form-group
          label(for="fullname") Họ và tên
          input#fullname(type="text", name="fullname", placeholder="Nhập họ và tên" required)
        .form-group
          label(for="email") Email
          input#email(type="email", name="email", placeholder="Nhập email" required)
        .form-group
          label(for="phone") Số điện thoại
          input#phone(type="tel", name="phone", placeholder="Nhập số điện thoại" required)
        button.btn(type="submit") Đăng ký
      .footer
        p Đã có tài khoản? 
          a(href="/login") Đăng nhập
