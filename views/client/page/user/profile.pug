extends ../../layout/default.pug

block main
    .container.container-profile
        .row.justify-content-center
            .col-md-8
                .card.mb-4.shadow-lg.border-0
                    .card-header.text-center.bg-gradient-primary.text-white.py-4
                        h1.animate__animated.animate__fadeInDown Thông tin cá nhân
                        hr
                    .card-body.p-4
                        .row
                            .d-flex.justify-content-center
                                .w-75
                                    if (messages.success_msg)
                                        .alert.alert-success.alert-dismissible.fade.show(role='alert')
                                            button.close(type='button' data-bs-dismiss='alert' aria-label='Close')
                                                span(aria-hidden='true') &times;
                                            | #{messages.success_msg}
                                    if (messages.error_msg)
                                        .alert.alert-danger.alert-dismissible.fade.show(role='alert')
                                            button.close(type='button' data-bs-dismiss='alert' aria-label='Close')
                                                span(aria-hidden='true') &times;
                                            | #{messages.error_msg}
                                    form(method='POST' action='/update')    
                                        .mb-3.form-group
                                            label(for='name') 
                                                i.fa-solid.fa-user.me-2
                                                | Họ tên
                                            input.form-control.shadow-sm(type='text' name='name' value=user.fullname placeholder='Nhập họ tên' required)
                                        .mb-3.form-group
                                            label(for='email') 
                                                i.fa-solid.fa-envelope.me-2
                                                | Email
                                            input.form-control.shadow-sm(type='email' name='email' value=user.email placeholder='Nhập email' required)
                                        .mb-3.form-group
                                            label(for='phone') 
                                                i.fa-solid.fa-phone.me-2
                                                | Số điện thoại
                                            input.form-control.shadow-sm(type='text' name='phone' value=user.phone placeholder='Nhập số điện thoại' required)
                       
                                        button.btn.btn-primary.mt-4.shadow-sm(type='submit')
                                            i.fa-solid.fa-save.me-2
                                            | Cập nhật thông tin

    style.
        .card-header {
            background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%);
        }
        .form-group label {
            font-weight: bold;
            font-size: 1rem;
        }
        .btn-primary {
            background-color: #2575fc;
            border-color: #2575fc;
            font-size: 1rem;
            padding: 0.6rem 1.2rem;
        }
        .btn-primary:hover {
            background-color: #1a63d8;
            border-color: #1a63d8;
        }
        .img {
            width: 150px;
            height: 150px;
        }
        .container-profile {
            margin-top: 30px;
        }


    script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js')
    script(src='https://kit.fontawesome.com/a076d05399.js')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css')
    