mixin pagination(curentPage, totalPage)
    nav(class="mt-3")
        ul(class="pagination").justify-content-center
            if(currentPage > 1)
                li(class="page-item")
                    button(class="page-link" button-pagination=currentPage-1) 
                        i.fas.fa-angle-left

            - for (var i = 1; i <= totalPage; i++)
                li(class="page-item")
                    button(class="page-link" button-pagination=i) #{i}

            if(currentPage < totalPage)
                li(class="page-item")
                    button(class="page-link" button-pagination=currentPage+1) 
                        i.fas.fa-angle-right