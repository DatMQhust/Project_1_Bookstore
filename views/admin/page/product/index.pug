extends ../../layout/default.pug 
include ../../mixins/pagination.pug
block main 
    h1 Danh sách sản phẩm
    .card.mb-3
        .card-header.bg-primary.text-white
            h3.card-title Danh sách sản phẩm
        .card-body
            .row
                .col-md-6
                    form.form-inline.my-2.my-lg-0(method="POST",action="",form-search)
                        input.form-control.mr-sm-2(type="search", placeholder="Tìm sản phẩm", aria-label="Search", name="search")
                        button.btn.btn-outline-success.my-2.my-sm-0(type="submit") Tìm
                .col-md-3.text-right
                    a.btn.btn-danger(href=`/${prefixAdmin}/product/deleted`) Sản phẩm đã xoá
                .col-md-3.text-left
                    a.btn.btn-success(href=`/${prefixAdmin}/product/create`) + Thêm sản phẩm
            p   
            table.table.table-striped.table-hover
                thead.thead-dark
                    tr
                        th STT
                        th Hình ảnh
                        th Tên sản phẩm
                        th Giá
                        th Lượt xem
                        th Trạng thái
                        th Thao tác
                tbody
                    each item, index in products
                        tr
                            td= index + 1
                            td
                                img(src="", alt=item.name, style="max-width: 100px; max-height: 100px;")
                            td= item.name
                            td #{item.price} VNĐ
                            td #{item.watched}
                            if item.status === "active"
                                td.text-success Hoạt động
                            else
                                td.text-danger Ngừng hoạt động
                            td 
                                a.btn.btn-primary(href=`/${prefixAdmin}/product/edit/${item.isbn}`, style="margin: 8px") Sửa

                                a.btn.btn-danger(href=`/${prefixAdmin}/product/delete/${item.isbn}`, style="margin: 8px") Xóa
                                a.btn.btn-secondary(href=`/${prefixAdmin}/product/detail/${item.isbn}`, style="margin: 8px") Chi tiết
    
        +pagination(currentPage, totalPage)
       

   
    script(src="/admin/js/product.js") 
                            
