block main
    button.btn.btn-outline-primary.mb-4(onclick="window.history.back()")
        i.fas.fa-arrow-left.mr-2
        | Quay lại

    h2.text-center.text-primary.mb-5 #{product.name}

    .container
        .row.shadow-lg.rounded.p-4.bg-white
            // Cột hình ảnh sản phẩm
            .col-md-5.text-center.d-flex.align-items-center.justify-content-center
                img.rounded.img-fluid(src=product.image alt=product.name style="max-width: 100%; max-height: 400px;")

            // Cột thông tin chi tiết sản phẩm
            .col-md-7
                .mb-3
                    i.fas.fa-barcode.me-2.text-secondary
                    b.text-info Mã sản phẩm: 
                    span.fw-bold #{product.isbn}
                .mb-3
                    i.fas.fa-user.me-2.text-secondary
                    b.text-info Tác giả: 
                    span.fw-bold #{authors}
                .mb-3
                    i.fas.fa-dollar-sign.me-2.text-secondary
                    b.text-info Giá tham khảo: 
                    span.fw-bold.text-danger #{product.price} VNĐ
                .mb-3
                    i.fas.fa-file-alt.me-2.text-secondary
                    b.text-info Số trang: 
                    span.fw-bold #{product.page} trang
                .mb-3
                    i.fas.fa-eye.me-2.text-secondary
                    b.text-info Lượt xem: 
                    span.fw-bold #{product.watched}
                .mb-3
                    i.fas.fa-toggle-on.me-2.text-secondary
                    b.text-info Trạng thái: 
                    if product.status === "active"
                        span.badge.bg-success.text-white Hoạt động
                    else
                        span.badge.bg-danger.text-white Dừng hoạt động
                .mb-3
                    i.fas.fa-tags.me-2.text-secondary
                    b.text-info Danh mục: 
                    span.fw-bold #{category}
                .mb-3
                    i.fas.fa-building.me-2.text-secondary
                    b.text-info Nhà xuất bản: 
                    span.fw-bold #{product.publisher}
                .mb-3
                    i.fas.fa-calendar-alt.me-2.text-secondary
                    b.text-info Năm xuất bản: 
                    span.fw-bold #{product.publish_year}
                .mb-3
                    i.fas.fa-language.me-2.text-secondary
                    b.text-info Ngôn ngữ: 
                    span.fw-bold #{product.language}
                
        .row.mt-5
            h5.text-muted.mb-3 Mô tả sản phẩm:
            p.text-secondary #{product.description}

style.
    @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap');
    @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
    @import url('https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css');

    body {
        font-family: 'Roboto', sans-serif;
    }

    h2 {
        font-weight: bold;
    }

    .container {
        background-color: #f8f9fa;
        border-radius: 10px;
    }

    .card {
        border-radius: 10px;
    }

    .btn-outline-primary {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-outline-primary i {
        font-size: 1rem;
    }

    img {
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    p.text-secondary {
        line-height: 1.8;
        font-size: 1rem;  
    }

    .badge {
        font-size: 1rem;
        padding: 0.5rem 1rem;
    }

script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js')
