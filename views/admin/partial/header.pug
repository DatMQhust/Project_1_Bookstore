doctype html
html
  head
    title Bookory Header
    // Import Bootstrap CSS
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
    // Import Font Awesome for icons
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css")
    style.
      /* CSS tùy chỉnh để phóng to và căn chỉnh hợp lý */
      .header, .navbar, .navbar-light {
        background-color: #ffffff;
        border-bottom: 1px solid #ddd;
      }
      .header .input-group {
        border-radius: 50px;
        overflow: hidden;
      }
      .header .form-control {
        border: none;
        border-radius: 50px 0 0 50px;
        padding-left: 20px;
        font-size: 1.1rem;
        height: 50px;
      }
      .header .btn-search {
        background-color: #ff6a5b;
        color: white;
        border-radius: 50px;
        padding: 10px 20px;
        font-size: 1.1rem;
      }
      .header .btn-search:hover {
        background-color: #ff5040;
      }
      .navbar-nav .nav-link {
        font-size: 1.2rem;
        padding: 10px 15px;
        margin-right: 5px;
      }
      .navbar-nav .nav-link.active {
        color: #ff6a5b !important;
        font-weight: bold;
      }
      .contact-info {
        color: #ff6a5b;
        font-weight: bold;
        font-size: 1.1rem;
        margin-left: 20px;
      }
      .badge {
        background-color: #ff6a5b;
        border-radius: 50%;
        font-size: 0.9rem;
        padding: 4px 8px;
      }
      .btn-categories {
        background-color: #ff6a5b;
        color: white;
        border-radius: 50px;
        padding: 10px 25px;
        font-weight: bold;
        font-size: 1.2rem;
        margin-right: 20px;
      }
      .btn-categories:hover {
        background-color: #ff5040;
      }
      .gray{
        background-color: #f5f5f5;
      }

  body
    header.header
      .container
        .d-flex.justify-content-between.align-items-center.py-3
          // Logo
          a.navbar-brand(href="#")
            i.fas.fa-book-open(style="color: #ff6a5b; font-size: 30px;") 
            |  Bookory

          // Search bar
          .input-group.w-50
            input.form-control.gray(type="text" placeholder="Search products...")
            .input-group-append
              button.btn.btn-search(type="button")
                i.fa.fa-search

          // Top right icons
          .d-flex.align-items-center
            
            a(href="#" class="nav-link")
              i.fa.fa-user
            a(href="#" class="nav-link position-relative")
              i.fa.fa-heart
              span.badge.badge-danger.position-absolute(style="top: -8px; right: -10px;") 0
            a(href="#" class="nav-link position-relative")
              i.fa.fa-shopping-cart
              span.badge.badge-danger.position-absolute(style="top: -8px; right: -10px;") 0

    // Navbar menu with Categories and Contact Info
    nav.navbar.navbar-expand-md.navbar-light
      .container
        .d-flex.align-items-center.w-100.justify-content-between
          // Categories button
          button.btn.btn-categories(type="button")
            i.fa.fa-th-large.mr-2
            | Categories

          // Menu links
          ul.navbar-nav.mx-auto
            li.nav-item
              a.nav-link.active(href="#") Home
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle(href="#" data-toggle="dropdown") Shop
              .dropdown-menu
                a.dropdown-item(href="#") Shop 1
                a.dropdown-item(href="#") Shop 2
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle(href="#" data-toggle="dropdown") Vendor
              .dropdown-menu
                a.dropdown-item(href="#") Vendor 1
                a.dropdown-item(href="#") Vendor 2
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle(href="#" data-toggle="dropdown") Pages
              .dropdown-menu
                a.dropdown-item(href="#") Page 1
                a.dropdown-item(href="#") Page 2
            li.nav-item
              a.nav-link(href="#") Blog
            li.nav-item
              a.nav-link(href="#") Contact

          // Contact info
          .contact-info.d-none.d-md-block
            | 0899817045
            br
            small 24/7 Support Center

    // Import Bootstrap JS and jQuery for dropdowns
    script(src="https://code.jquery.com/jquery-3.5.1.min.js")
    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
