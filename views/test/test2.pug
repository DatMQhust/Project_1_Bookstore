doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Comment Section
    
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css")  
  body
    .sider.bg-white.shadow
      .logo.text-center.py-4
          a(href="/admin/dashboard")
              img(src="/uploads/avatar.jpg", alt="Logo")
      .inner-menu
          ul.nav.flex-column
              li.nav-item.my-2
                  a.nav-link.text-dark.active(href="/admin/dashboard")
                      i.fas.fa-home.me-2.text-primary 
                      span.text-primary Dashboard
              li.nav-item.my-2
                  a.nav-link.text-muted(href="/admin/product")
                      i.fas.fa-shopping-cart.me-2 
                      span NFT Marketplace
              li.nav-item.my-2
                  a.nav-link.text-muted(href="/admin/category")
                      i.fas.fa-table.me-2 
                      span Tables
              li.nav-item.my-2
                  a.nav-link.text-muted(href="/admin/author")
                      i.fas.fa-th.me-2 
                      span Kanban
              li.nav-item.my-2
                  a.nav-link.text-muted(href="/admin/user")
                      i.fas.fa-user.me-2 
                      span Profile
              li.nav-item.my-2
                  a.nav-link.text-primary.font-weight-bold(href="/auth/signin")
                      i.fas.fa-lock.me-2 
                      span Sign In
              li.nav-item.my-2
                  a.nav-link.text-primary.font-weight-bold(href="/auth/signup")
                      i.fas.fa-user-plus.me-2 
                      span Sign Up
                    
